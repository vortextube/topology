%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 500 500
%%EndComments

/black	{0 0 0 setrgbcolor} def
/datumlength	5	def

/drawdatum
	{
	gsave
	0 datumlength neg moveto
	0 datumlength lineto black stroke
	datumlength neg  0 moveto
	datumlength 0 lineto black stroke
	grestore
	} def

/polycutout
	{
	/polyradius exch def
	/sides exch def
	gsave
	drawdatum
	sides polyradius clockwisenicks
	sides polyradius counterclockwisenicks
	%sides polyradius completetabs
	%6 200 createfolds
	grestore
	} def


/clockwisenicks
	{
	/myradius exch def
	/mysides exch def
	/start 0 def
	/step 360 mysides div def
	/stop 360 step sub def

	start step stop 	{
			/myangle exch def
			/myx myangle cos myradius mul def
			/myy myangle sin myradius mul def
			gsave
			myx myy translate
			drawdatum
			/sumofinternalangles mysides 2 sub 180 mul def
			/anglepervertex sumofinternalangles mysides div def
			/halfanglepervertex anglepervertex 2 div def
			/offset 180 halfanglepervertex sub def
			myangle offset sub rotate
			tab
			grestore
			} for
	} def

/counterclockwisenicks
	{
	/myradius exch def
	/mysides exch def
	/start 0 def
	/step 360 mysides div def
	/stop 360 step sub def
	start step stop 	{
			/myangle exch def
			/myx myangle cos myradius mul def
			/myy myangle sin myradius mul def
			gsave
			myx myy translate
			drawdatum
			/sumofinternalangles mysides 2 sub 180 mul def
			/anglepervertex sumofinternalangles mysides div def
			/halfanglepervertex anglepervertex 2 div def
			myangle halfanglepervertex sub rotate
			mirroredtab
			grestore
			} for
	} def

/completetabs
	{
	/myradius exch def
	/mysides exch def
	/start 0 def
	/step 360 mysides div def
	/stop 360 step sub def
	start step stop 	{
			/myangle exch def
			/myx myangle cos myradius mul def
			/myy myangle sin myradius mul def
			gsave
			drawdatum
			myx myy translate
			myangle step sub rotate
			mirroredtab
			grestore
			} for
	} def

/tab
	{
	/radius		9.25	def
	/tabheight		15	def
	/notchdepth		15	def
	/notchwidth		4	def
	/Helvetica findfont 4 scalefont setfont
	5 10 moveto
	(Robb Hill Creations) show
	0 radius neg moveto
	0 0 radius 270 0 arc
	notchdepth 0 lineto
	notchdepth notchwidth lineto
	/xintersect radius radius mul notchwidth notchwidth mul sub sqrt def
	/angle notchwidth xintersect atan def
	xintersect notchwidth lineto
	0 0 radius angle 90 arc
	0 tabheight lineto
	360 sides div 2 div sin polyradius mul 2 mul tabheight lineto black stroke 
	} def


/mirroredtab
	{
      gsave
	1 neg 1 scale
	/radius		9.25	def
	/tabheight		15	def
	/notchdepth		15	def
	/notchwidth		4	def
	/Helvetica findfont 5 scalefont setfont
	0 radius neg moveto
	0 0 radius 270 0 arc
	notchdepth 0 lineto
	notchdepth notchwidth lineto
	/xintersect radius radius mul notchwidth notchwidth mul sub sqrt def
	/angle notchwidth xintersect atan def
	xintersect notchwidth lineto
	0 0 radius angle 90 arc
	0 tabheight lineto
	360 sides div 2 div sin polyradius mul 2 mul tabheight lineto black stroke 
	grestore
	} def


